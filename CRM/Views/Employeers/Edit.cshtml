@using Models
@model EmployeeViewModel
@{
    ViewData["Title"] = "Редактирование";
}

<h1 class="text-center">Редактирование</h1>

<form method="post" class="mt-3" asp-action="Edit" asp-controller="Employeers">
    <div class="row justify-content-center m-3">
        <div class="col col-lg-8 ">
            @*Name*@
            <div class="card-header cardHeaderStyle text-center p-4">
                <div class="form-group row">
                    <label class="col col-lg-4 col-form-label text-right control-label">ФИО:</label>
                    <div class="col col-lg-6">
                        <input type="text" asp-for="Name" class="form-control" placeholder="Иванов Иван Иванович" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*Email*@
            <div class="card-header cardHeaderStyle text-center">
                <div class="form-group row">
                    <label class="col col-lg-4 col-form-label text-right control-label">Почта:</label>
                    <div class="col col-lg-6">
                        <input type="email" asp-for="Email" class="form-control" placeholder="mail@mail.ru" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*Address*@
            <div class="card-header cardHeaderStyle text-center">
                <div class="form-group row">
                    <label class="col col-lg-4 col-form-label text-right control-label">Адрес:</label>
                    <div class="col col-lg-6">
                        <input type="text" asp-for="Address" class="form-control" placeholder="ул.Пушкина д.1" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            @*Departament*@
            <div class="card-header cardHeaderStyle text-center">
                <div class="form-group row">
                    <label asp-for="Departament" class="col col-lg-4 col-form-label text-right">Специальность: </label>
                    <div class="col-12 col-lg-6">
                        <!--Создаём выпадающий список с департаментами-->
                        <!--Необходимо подключить класс локально или глобально-->
                        <select asp-for="Departament" class="custom-select mr-2" asp-items="Html.GetEnumSelectList<Models.Departaments>()">
                            <!--Добавляем начальный элемент выпадающего списка-->
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="Departament" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card-footer text-center" style="background-color: rgba(0, 0, 0, 0.25);">
                        <button type="submit" class="btn btn-success m-1 buttonShadow">Создать</button>
                        <button class="btn btn-primary buttonShadow"><a asp-controller="Home" asp-action="Index" class="m-1 text-decoration-none text-white">Отмена</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>