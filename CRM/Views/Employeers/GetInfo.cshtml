@using Models
@using Services
@model IEnumerable<Models.EmployeeViewModel>
@{
    ViewData["Title"] = "Список сотрудников";
}
<h1 class="text-center">Список сотрудников</h1>

<form method="post" class="mt-3" asp-action="GetInfo" asp-controller="Employeers">
    <div class="justify-content-center m-3">
        <p><small>Общее число сотрудников: @Model.Count()</small></p>
        <div class="container">
            <div class="row border justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-8 col-lg-4 border m-3">
                        <div class="form-group row justify-content-center">
                            <p class="font-weight-bold text-center col-form-label control-label">@item.Name</p>
                        </div>
                        <div class="text-center">
                            <a asp-controller="Employeers" asp-action="EmployeeInfo" asp-route-ID="@item.Id" class="btn btn-success m-2 buttonShadow">View</a>
                            <a asp-controller="Employeers" asp-action="Edit" asp-route-ID="@item.Id" class="btn btn-primary m-2 buttonShadow">Edit</a>
                            <a asp-controller="Employeers" asp-action="Delete" asp-route-ID="@item.Id" class="btn btn-danger m-2 buttonShadow">Delete</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</form>